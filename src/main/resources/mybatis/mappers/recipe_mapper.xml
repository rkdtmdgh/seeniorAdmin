	<!-- 페이지에 따른 식단 가져오기(모든 식단) -->
	<select id="getRecipeListWithPage"
			resultMap="RecipeDto">
		
		SELECT 
			* 
		FROM 
			RECIPE 
		<choose>
			<when test="sort == 'all'">
				ORDER BY RCP_SEQ DESC 
			</when>
			<when test="sort == 'asc'">
				ORDER BY RCP_NM ASC 
			</when>
			<when test="sort == 'desc'">
				ORDER BY RCP_NM DESC 
			</when>
		</choose>
		LIMIT 
			#{start}, #{limit}		
	
	</select>
	
	<!-- 식단의 총 리스트 개수 구하기 (모든 식단) -->
	<select id="getAllRecipeCnt">
		
		SELECT 
			COUNT(*) 
		FROM 
			RECIPE 
	
	</select>
	

